---
// Utils
import { slugify, formatDate } from "../ts/utils";
// Types
import type { FrontmatterType } from "../types/frontmatter.type";

const { title, date, category, author, image } = Astro.props as FrontmatterType;
---

<header>
  <div class="container">
    <small
      ><a href={`/category/${slugify(category)}`} class="badge">{category}</a
      ></small
    >
    <h1 class="h2">{title}</h1>
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a> Â· {
        formatDate(date)
      }
    </p>
  </div>
  <img
    class="hero-image"
    src={image.src}
    alt={image.alt}
    width="1200"
    height="600"
  />
</header>

<style>
  .hero-image {
    border-radius: 1rem;
  }
</style>
