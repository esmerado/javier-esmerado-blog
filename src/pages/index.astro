---
import MainLayout from "../layouts/MainLayout.astro";
// Components
import HorizontalPosts from "../components/HorizontalPosts.astro";
import Presentation from "../components/Presentation.astro";
// Enums
import { StyleEnum } from "../enums/styles.enum";
// Utils
import { formatBlogPosts } from "../ts/utils";
// Translations
import { translations } from "../translations/blog.translations";

const mainContants = {
  title: translations.MAIN.TITLE,
  description: translations.MAIN.DESCRIPTION,
  imageUrl: "/images/main.png",
  buttonHref: "/about/",
  buttonText: translations.MAIN.ABOUT_ME_BUTTON,
  buttonStyle: StyleEnum.SECONDARY,
};

const allPosts = await Astro.glob("./blog/**/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
  limit: 3,
});
---

<MainLayout title="Javier Esmerado Blog">
  <Presentation {...mainContants} />
  <HorizontalPosts
    posts={formattedPosts}
    title={translations.HORIZONATAL_POSTS.TITLE}
  />
</MainLayout>
